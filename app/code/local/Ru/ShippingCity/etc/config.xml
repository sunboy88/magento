<?xml version="1.0"?>
<config>
    <modules>
        <Ru_ShippingCity>
            <version>0.1.0</version>
        </Ru_ShippingCity>
    </modules>
    <global>
        <models>
            <shippingcity>
                <class>Ru_ShippingCity_Model</class>
                <resourceModel>shippingcity_resource</resourceModel>
            </shippingcity>
            <shippingcity_resource>
                <class>Ru_ShippingCity_Model_Resource</class>
                <entities>
                    <city>
                        <table>directory_country_region_city</table>
                    </city>
                </entities>
            </shippingcity_resource>
            <adminhtml>
                <rewrite>
                    <customer_renderer_region>Ru_ShippingCity_Model_Adminhtml_Customer_Renderer_Region</customer_renderer_region>
                </rewrite>
            </adminhtml>
        </models>
        <resources>
            <shippingcity_setup>
                <setup>
                    <module>Ru_ShippingCity</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </shippingcity_setup>
        </resources>
        <blocks>
            <shippingcity>
                <class>Ru_ShippingCity_Block</class>
            </shippingcity>
        </blocks>
        <helpers>
            <shippingcity>
                <class>Ru_ShippingCity_Helper</class>
            </shippingcity>
        </helpers>
        <events>
            <sales_order_address_save_before>
                <observers>
                    <convert_city_id>
                        <type>singleton</type>
                        <class>shippingcity/observer</class>
                        <method>convertCityId</method>
                    </convert_city_id>
                </observers>
            </sales_order_address_save_before>
            <customer_address_format>
                <observers>
                    <convert_city_id>
                        <type>singleton</type>
                        <class>shippingcity/observer</class>
                        <method>convertCityId</method>
                    </convert_city_id>
                </observers>
            </customer_address_format>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <ru_shippingcity>
                    <file>ru/shippingcity.xml</file>
                </ru_shippingcity>
            </updates>
        </layout>
        <routers>
            <shippingcity>
                <use>standard</use>
                <args>
                    <module>Ru_ShippingCity</module>
                    <frontName>shippingcity</frontName>
                </args>
            </shippingcity>
        </routers>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ru_ShippingCity before="Mage_Adminhtml">Ru_ShippingCity_Adminhtml</Ru_ShippingCity>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <ru_shippingcity>
                    <file>ru/shippingcity.xml</file>
                </ru_shippingcity>
            </updates>
        </layout>
    </adminhtml>
</config> 